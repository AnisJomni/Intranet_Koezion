<form>	<name>Laissez un commentaire</name>	<error_message>Merci de corriger vos informations</error_message>	<success_message>Votre commentaire a bien été pris en compte</success_message>	<mail_subject>Nouveau commentaire</mail_subject>	<question>		<label>Nom : </label>		<name>name</name>		<value type='text' default=''>				<constraint message="Veuillez saisir votre nom (3 caractères minimum)">notEmpty</constraint>			<constraint message="Veuillez saisir votre nom (3 caractères minimum)" params="Veuillez saisir votre nom">notEqualsTo</constraint>			<constraint message="Veuillez saisir votre nom (3 caractères minimum)" params="3">minLength</constraint>		</value>		<input_params value="Veuillez saisir votre nom" title="Veuillez saisir votre nom" label="0" div="0" css=""></input_params>	</question>	<question>		<label>Email : </label>		<name>email</name>		<value type='text' default=''>				<constraint message="Vous devez indiquer un email valide">email</constraint>		</value>		<input_params value="Veuillez saisir votre email" title="Veuillez saisir votre email" label="0" div="0" css=""></input_params>	</question>	<question>		<label>Message : </label>		<name>message</name>		<value type='textarea' default=''>			<constraint message="Veuillez saisir votre message (10 caractères minimum)">notEmpty</constraint>			<constraint message="Veuillez saisir votre message (10 caractères minimum)" params="Veuillez saisir votre message">notEqualsTo</constraint>			<constraint message="Veuillez saisir votre message (10 caractères minimum)" params="10">minLength</constraint>		</value>		<input_params value="Veuillez saisir votre message" title="Veuillez saisir votre message" label="0" div="0" css=""></input_params>	</question>	<question>		<label>Type formulaire</label>		<name>type_formulaire</name>		<value type='hidden' default='commentaire'></value>	</question></form>